{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es5",
    "lib": ["es5", "es2015.promise", "es2015.core"],
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./**/*.ts"]
}
